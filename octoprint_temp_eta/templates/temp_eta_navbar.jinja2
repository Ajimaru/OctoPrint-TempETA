<div id="navbar_plugin_temp_eta" class="nav-item" data-bind="visible: showETA()">
    <!-- ko foreach: heaterColumns() -->
    <div class="temp-eta-column">
        <!-- ko foreach: $data -->
        <div class="temp-eta-item" data-bind="css: $root.getETAClass($data)">
            <span class="temp-eta-label">
                <i class="fa" data-bind="css: $root.getHeaterIcon(name)"></i>
            </span>
            <span class="temp-eta-name" data-bind="text: $root.getHeaterLabel(name)"></span>
            <span class="temp-eta-metrics">
                <span class="temp-eta-value" data-bind="text: $root.formatETA(eta())"></span>
                <span class="temp-eta-temp" data-bind="text: $root.formatTempPair($data)"></span>
            </span>
        </div>
        <!-- /ko -->
    </div>
    <!-- /ko -->
</div>

<span id="temp_eta_i18n" style="display:none"
    data-notify-plugin-title="{{ _('Temperature ETA') }}"
    data-notify-target-reached-title="{{ _('Target reached') }}"
    data-notify-target-reached-text="{{ _('{heater}: reached {target}') }}"
    data-notify-cooldown-finished-title="{{ _('Cooldown finished') }}"
    data-notify-cooldown-finished-text="{{ _('{heater}: cooled down to {target}') }}"></span>
